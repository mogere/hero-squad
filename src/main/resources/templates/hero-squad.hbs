{{#partial "content"}}

    <div class = "col-md-6">
        <h3>Add heroes to your squad</h3>
        <div class = "card">
            <label>choose your heroes</label>
            <select class="form-control input-sm mb15" name="heroes">
                <option value="">-</option>
                {{#each allHeroes}}
