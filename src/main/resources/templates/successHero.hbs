{{#partial "content"}}
    <div class="alert alert-success mt40">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
        <strong>Has Been Successfully Added to the squad!</strong>. <a href="/addHeroes" class="alert-link">Add another hero</a>.<br>
        <a href="/" class="alert-link">Go back home to add heroes to Squad.</a>
    </div>
    {{#if allHeroes}}
    <div class = "card">
        <h3>Here are your added heroes</h3>
        {{#each allHeroes}}
            <ol>
                <li><b>{{heroName}}</b>  |  <small>Age: {{age}} | Special Power: {{power}} | Weakness: {{weakness}}</small></li>
            </ol>
        {{/each}}
    </div>
    {{/if}}
{{/partial}}

{{> layout.hbs}}